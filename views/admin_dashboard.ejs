
<%- include ('./partials/header.ejs')%>
<body>
  <div class="col-md-6">
   <h2>Admin DashBoard </h2>
  </div>
  <a href="/users/logout"><Button class="btn btn-primary btn-sm" id="logout">Log out</Button></a>
  <hr style="margin-top: 5%;">
  <div class="container">
    <% if (nonAdminUsers.length > 0 ) { %>
      <table class="table table-striped table-hover " style="margin-top: 5%;">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Mobile</th>
          <th>CNIC</th>
          <th colspan="2">Action</th>
        </tr>
        <% nonAdminUsers.forEach(user => { %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.mobileNum %></td>
            <td><%= user.cnic %></td>
            <td><a href="/users/profile/<%= user._id%>" class="btn btn-info btn-sm">Profile</a> |
            <a href="/users/delete/<%= user.id %>" class="btn btn-danger btn-sm">Destroy</a></td>
          </tr>
        <% }); %>
      </table>
    <% } else { %>
      <p>No users yet</p>
    <% } %>
  </div>
</body>
